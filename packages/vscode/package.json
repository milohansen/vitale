{
  "name": "vitale-vscode",
  "displayName": "Vitale",
  "description": "",
  "version": "0.0.17",
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.2"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/githubnext/vitale.git"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "Restart Kernel",
        "command": "vitale.restartKernel",
        "category": "Vitale",
        "icon": "$(refresh)"
      },
      {
        "title": "Run Dirty",
        "command": "vitale.runDirty",
        "category": "Vitale",
        "icon": "$(run-all)"
      },
      {
        "title": "View cell output in pane",
        "command": "vitale.viewCellOutputInPane",
        "category": "Vitale",
        "icon": "$(open-preview)",
        "enablement": "notebookType == 'vitale-notebook'"
      },
      {
        "title": "Show cell output channel",
        "command": "vitale.showCellOutputChannel",
        "category": "Vitale",
        "icon": "$(output)",
        "enablement": "notebookType == 'vitale-notebook'"
      }
    ],
    "menus": {
      "notebook/toolbar": [
        {
          "command": "vitale.restartKernel",
          "group": "navigation",
          "when": "notebookType == 'vitale-notebook'"
        },
        {
          "command": "vitale.runDirty",
          "group": "navigation",
          "when": "notebookType == 'vitale-notebook'"
        }
      ],
      "notebook/cell/title": [
        {
          "command": "vitale.viewCellOutputInPane",
          "group": "inline/cell@1",
          "when": "notebookType == 'vitale-notebook'"
        },
        {
          "command": "vitale.showCellOutputChannel",
          "group": "inline/cell@2",
          "when": "notebookType == 'vitale-notebook'"
        }
      ]
    },
    "notebooks": [
      {
        "type": "vitale-notebook",
        "displayName": "Vitale Notebook",
        "selector": [
          {
            "filenamePattern": "*.vnb"
          }
        ]
      }
    ],
    "notebookRenderer": [
      {
        "id": "json-renderer",
        "displayName": "JSON Renderer",
        "entrypoint": "./dist/jsonRenderer.mjs",
        "mimeTypes": [
          "application/x-json-view"
        ]
      },
      {
        "id": "vitale-renderer",
        "displayName": "Vitale Renderer",
        "entrypoint": "./dist/vitaleRenderer.mjs",
        "mimeTypes": [
          "application/x-vitale"
        ]
      }
    ],
    "configuration": {
      "title": "Vitale",
      "properties": {
        "vitale.rerunCellsWhenDirty": {
          "type": "boolean",
          "default": true,
          "description": "Automatically re-run cells when their dependencies change",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package --no-dependencies",
    "vscode:prepublish": "pnpm run build",
    "build": "tsup",
    "watch": "tsup --watch",
    "pretest": "pnpm run build && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@githubnext/vitale": "workspace:../server",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@types/vscode": "1.90.0",
    "@types/vscode-notebook-renderer": "^1.72.3",
    "@types/vscode-webview": "^1.57.5",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@uiw/react-json-view": "2.0.0-alpha.21",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.24.0",
    "birpc": "^0.2.17",
    "dompurify": "^3.1.4",
    "eslint": "^8.57.0",
    "get-port": "^7.1.0",
    "json5": "^2.2.3",
    "markdown-it": "^14.1.0",
    "nanoid": "^5.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tree-kill": "^1.2.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "ws": "^8.17.1"
  }
}
